<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="100dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myimageview">

        <com.example.cheaper_price.MyImageView
            android:id="@+id/list_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="price"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.cheaper_price.MyButton
                android:layout_marginTop="10dp"
                android:text="儲存"
                android:background="@drawable/mybutton"
                android:id="@+id/list_button"
                android:contentDescription="進入到選擇的項目"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/marketname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:gravity="center"
                android:text="賣家" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>